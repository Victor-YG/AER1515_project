    "version": "0.2.0",
    "configurations": [
        {
            "name": "realsense_capture (depth)",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/",
            "program": "${workspaceFolder}/src/realsense_capture.py",
            "args": [
                "--output", "../images",
                "--resolution", "480",
                "--n_frames", "30",
                "--frame_rate", "15",
                "-l", "-r", "-d"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "realsense_capture (stereo)",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/",
            "program": "${workspaceFolder}/src/realsense_capture.py",
            "args": [
                "--output", "../images",
                "--resolution", "480",
                "--n_frames", "30",
                "--frame_rate", "15",
                "-l", "-r"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "sparse_ba",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/",
